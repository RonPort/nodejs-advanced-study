  "bugs": {
    "url": "https://github.com/RonPort/nodejs-advanced-study/issues"
  },
  "homepage": "https://github.com/RonPort/nodejs-advanced-study#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.14.6",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.3",
    "lint-staged": "^13.1.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "module-alias": "^2.2.2"
  }
